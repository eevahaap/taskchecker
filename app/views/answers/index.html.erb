<p id="notice"><%= notice %></p>

<h1>Listing Answers</h1>

<table width="60%">
  <thead>
    <tr>
      <th>Username</th>
      <th>Ans1</th>
      <th>Ans2</th>
      <th>Ans3</th>
      <th>Ans4</th>
      <th>Ans5</th>
      <th>Res1</th>
      <th>Res2</th>
      <th>Res3</th>
      <th>Res4</th>
      <th>Res5</th>
      <th>Total res</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.username %></td>
        <td><%= answer.ans1 %></td>
        <td><%= answer.ans2 %></td>
        <td><%= answer.ans3 %></td>
        <td><%= answer.ans4 %></td>
        <td><%= answer.ans5 %></td>
        <td><%= answer.res1 %></td>
        <td><%= answer.res2 %></td>
        <td><%= answer.res3 %></td>
        <td><%= answer.res4 %></td>
        <td><%= answer.res5 %></td>
        <td><%= answer.total_res %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

