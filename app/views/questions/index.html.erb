<p id="notice"><%= notice %></p>

<h1>Listing Questions</h1>

<table>
  <thead>
    <tr>
      <th>Q1</th>
      <th>Q2</th>
      <th>Q3</th>
      <th>Q4</th>
      <th>Q5</th>
      <th>Question name</th>
      <th>Ans1</th>
      <th>Ans2</th>
      <th>Ans3</th>
      <th>Ans4</th>
      <th>Ans5</th>
      <th>Schoolclass</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.q1 %></td>
        <td><%= question.q2 %></td>
        <td><%= question.q3 %></td>
        <td><%= question.q4 %></td>
        <td><%= question.q5 %></td>
        <td><%= question.question_name %></td>
        <td><%= question.ans1 %></td>
        <td><%= question.ans2 %></td>
        <td><%= question.ans3 %></td>
        <td><%= question.ans4 %></td>
        <td><%= question.ans5 %></td>
        <td><%= question.schoolclass_id %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

